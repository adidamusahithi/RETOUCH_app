<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_below="@+id/options"
        android:id="@id/draw">
        <ImageView
            android:layout_width="500dp"
            android:layout_height="400dp"
            android:id="@+id/iv"
            android:scaleType="fitXY"/>

    </RelativeLayout>


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    android:id="@+id/options"
    android:gravity="bottom"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fill"
        android:layout_toRightOf="@+id/button"
        android:id="@+id/button2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/save"
        android:id="@+id/button3" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button3"
        android:background="@drawable/stroke"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:background="@drawable/eraser"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/draw"
    android:gravity="bottom"
    >
    Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="hai"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:id="@+id/red"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text=""
        android:id="@+id/blue"
        android:layout_alignTop="@+id/red"
        android:layout_toRightOf="@+id/red"
        android:layout_toEndOf="@+id/red" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text=""
        android:id="@+id/green"
        android:layout_alignTop="@+id/blue"
        android:layout_toRightOf="@+id/blue"
        android:layout_toEndOf="@+id/blue" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text=""
        android:id="@+id/black"
        android:layout_alignTop="@+id/green"
        android:layout_toRightOf="@+id/green"
        android:layout_toEndOf="@+id/green" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text=""
        android:id="@+id/orange"
        android:layout_alignTop="@+id/black"
        android:layout_toRightOf="@+id/black"
        android:layout_toEndOf="@+id/black" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text=""
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/orange"
        android:layout_toRightOf="@+id/orange"
        android:layout_toEndOf="@+id/orange" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text=""
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text=""
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />
</LinearLayout>
    </RelativeLayout>